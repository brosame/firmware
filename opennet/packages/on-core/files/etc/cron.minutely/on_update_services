#!/bin/sh

set -eu

uptime=$(on-function get_uptime_minutes)

# kurz nach dem Starten des AP, sowie im 3-Minuten-Takt werden die Dienste aktualisiert
[ "$((uptime % 3))" -eq 0 -o "$uptime" -lt 7 ] || exit 0
# das nameservice-Trigger-Skript sorgt fuer eine baldige Aktualisierung
"${IPKG_INSTROOT:-}/etc/olsrd/nameservice.d/on_update_services"

