# # check if we are on real system
[ -n "${IPKG_INSTROOT:-}" ] && exit 0

echo "*** opennet-tinc was installed ****************"
echo "please configure it in /etc/init.d/on_tinc"
echo "restart your system after finished"
echo "***********************************************"
/etc/init.d/on_tinc enable
exit 0
