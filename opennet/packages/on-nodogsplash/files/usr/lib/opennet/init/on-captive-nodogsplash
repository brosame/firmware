
# Die Datei /etc/nodogsplash/nodogsplash.conf aendern
# -GatewayInterface br-lan
# +GatewayInterface wlan0
sed -i 's/br-lan/wlan0/g' /etc/nodogsplash/nodogsplash.conf

# -# RedirectURL http://www.ilesansfil.org/
# +RedirectURL http://wiki.opennet-initiative.de/wiki/Wifidog_Portal
sed  's*# RedirectURL http://www.ilesansfil.org*RedirectURL http://wiki.opennet-initiative.de/wiki/Wifidog_Portal*g' /etc/nodogsplash/nodogsplash.conf

# /etc/nodogsplash/htdocs/splash.html ersetzen
mv /etc/nodogsplash/htdocs/splash.html /etc/nodogsplash/htdocs/splash.html.orig
mv /etc/nodogsplash/htdocs/splash_oni.html /etc/nodogsplash/htdocs/splash.html
