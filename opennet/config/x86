CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_generic=y

# Root filesystem images
#CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_GRUB_IMAGES=y
CONFIG_VDI_IMAGES=y
CONFIG_VMDK_IMAGES=y
CONFIG_TARGET_ROOTFS_PARTSIZE=32

CONFIG_PACKAGE_MAC80211_DEBUGFS=y
CONFIG_PACKAGE_MAC80211_MESH=y

# embed all kernel modules
# x86 devices can use a wide variety of peripheral devices.  Building these as a module ("m") is
# not supported by OpenWrt.  Thus we just embed all of them.
# The increased size should be fine for all x86-based targets (e.g. APU or VMs).
CONFIG_ALL_KMODS=y

